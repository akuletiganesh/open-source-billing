f2ab = Frame(f2a,width=450,height=330,bd=8,relief="raise")
f2ab.pack(side=LEFT)

lblInfo=Label(Tops,font=('arial',60,'bold'),text="          Online Billing System           ", bd=10,anchor='w')
lblInfo.grid(row=0,column=0)

#=======================================calculator===========================================================
text_Input=StringVar()
operator=""
PaymentRef=StringVar()
Carpets=StringVar()
Fabric=StringVar()
Blinds=StringVar()
delivery=StringVar()
PaidTax=StringVar()
SubTotal=StringVar()
TotalCost=StringVar()
Dateoforder=StringVar()
CostofCarpets=StringVar()
costofFabric=StringVar()
costofBlinds=StringVar()
costofdelivery=StringVar()

Carpets.set(0)
Fabric.set(0)
Blinds.set(0)
delivery.set(0)
Dateoforder.set(time.strftime("%d/%m/%y"))

def costoforder():
    Carpetprice = float(Carpets.get())
    Blindsprice = float(Blinds.get())
    Fabricprice = float(Fabric.get())
    deliverycost = float(delivery.get())
    
    Carpetscost= "rs", str('%.2f' %((Carpetprice * 50))) 
    CostofCarpets.set(Carpetscost)
    
    Blindscost= "rs", str('%.2f' %(Blindsprice * 70))) 
    costofBlinds.set(Blindscost)
    
    Fabricscost= "rs", str('%.2f' %((Fabricprice * 60))) 
    costofFabric.set(Fabriccost)
    
    delivery= "rs", str('%.2f' %((deliverycost * 40))) 
    costofdelivery.set(delivery)
        

def PayReference():
    x = random.randint(10034,699812)
    randomref=str(x)
    PaymentRef.set("BILL"+ randomref)
    

import tkinter.messagebox
def iExit():
    qExit=messagebox.askyesno("Billing System","do you want exit the system")
    if qExit> 0:
        root.destroy()
        return
def Reset():
    PaymentRef.set("")
    Carpets.set(0)
    Fabric.set(0)
    Blinds.set(0)
    delivery.set(0)
    PaidTax.set("")
    SubTotal.set("")
    TotalCost.set("")
    Dateoforder.set("")
    CostofCarpets.set("")
    costofFabric.set("")
    costofBlinds.set("")
    costofdelivery.set("")

    



def btnclick(numbers):
    global operator
    operator=operator +  str(numbers)
    text_Input.set(operator)
    
def btnclearDisplay():
    global operator
    operator=""
    text_Input.set("")
    
    
def btnEqualsInput():
    global operator
    sumup = str(eval(operator))
    text_Input.set(sumup)
    operator=""

    
    
        

txtDisplay = Entry(f2,font=('arial',20,'bold'),textvariable=text_Input, bd=40, insertwidth=6, justify='right')
txtDisplay.grid(columnspan=4)
btn7=Button(f2,padx=16,pady=16,bd=8,fg="black",font=('arial',20,'bold'),
            text="7",bg="powder blue",command=lambda: btnclick(7)).grid(row=1,column=0)
