           text="=",bg="powder blue",command=btnEqualsInput).grid(row=5,column=2)
Division=Button(f2,padx=16,pady=16,bd=8,fg="black",font=('arial',20,'bold'),
           text="/",bg="powder blue",command=lambda:btnclick("/")).grid(row=5,column=3)
