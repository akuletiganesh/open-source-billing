#=============================================================================================================
btn1=Button(f2,padx=16,pady=16,bd=8,fg="black",font=('arial',20,'bold'),
           text="1",bg="powder blue",command=lambda:btnclick(1)).grid(row=5,column=0)
btnclear=Button(f2,padx=16,pady=16,bd=8,fg="black",font=('arial',20,'bold'),
